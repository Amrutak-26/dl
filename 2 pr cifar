# ðŸ”¹ Import Libraries
import tensorflow as tf
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Dense, Flatten
from tensorflow.keras.datasets import cifar10
import matplotlib.pyplot as plt
import numpy as np

# ðŸ”¹ Load Dataset
(x_train, y_train), (x_test, y_test) = cifar10.load_data()

# ðŸ”¹ Class Names (Labels)
class_names = ['airplane', 'automobile', 'bird', 'cat', 'deer',
               'dog', 'frog', 'horse', 'ship', 'truck']

# ðŸ”¹ Preprocessing
x_train, x_test = x_train / 255.0, x_test / 255.0      # Normalize pixels
y_train_onehot = tf.keras.utils.to_categorical(y_train, 10)  # One-hot encode labels
y_test_onehot  = tf.keras.utils.to_categorical(y_test, 10)

# ðŸ”¹ Build Model (Simple Feedforward Neural Network)
model = Sequential([
    Flatten(input_shape=(32, 32, 3)),     # Convert image to 1D
    Dense(512, activation='relu'),
    Dense(256, activation='relu'),
    Dense(128, activation='relu'),
    Dense(10, activation='softmax')       # Output 10 class probabilities
])

# ðŸ”¹ Compile Model
model.compile(optimizer='adam',
              loss='categorical_crossentropy',
              metrics=['accuracy'])

# ðŸ”¹ Train Model
history = model.fit(x_train, y_train_onehot,
                    epochs=10, batch_size=32,
                    validation_data=(x_test, y_test_onehot))

# ðŸ”¹ Plot Accuracy Graph
plt.plot(history.history['accuracy'], label='Training Accuracy')
plt.plot(history.history['val_accuracy'], label='Validation Accuracy')
plt.title('Model Accuracy')
plt.xlabel('Epoch')
plt.ylabel('Accuracy')
plt.legend()
plt.show()

# ðŸ”¹ Predict & Show 5 Random Images
y_pred = np.argmax(model.predict(x_test), axis=1)
num_images = 5
random_idx = np.random.choice(x_test.shape[0], num_images, replace=False)

plt.figure(figsize=(12, 3))
for i, idx in enumerate(random_idx):
    plt.subplot(1, num_images, i + 1)
    plt.imshow(x_test[idx])
    plt.title(f"Pred: {class_names[y_pred[idx]]}")
    plt.axis('off')
plt.tight_layout()
plt.show()
